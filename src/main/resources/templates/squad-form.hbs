{{#partial "navbar"}}
    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
    <li class="nav-item"><a class="nav-link" href="/heroes/new">Build a Hero</a></li>
    <li class="nav-item active"><a class="nav-link" href="/squads/new">Form a Squad</a></li>
    <li class="nav-item"><a class="nav-link" href="/heroes">View Progress</a></li>
{{/partial}}

{{#partial "content"}}
<h2 class="text-center">Form a new Alliance</h2>
<div id="newSquadForm">
    <form action="/squads/new" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="cause">Cause</label>
            <textarea class="form-control" name="cause" id="cause" rows="3" required></textarea>
        </div>
        <div class="form-group">
            <label for="founder">Founder</label>
            <select class="form-control" id="founder" name="founder">
                {{#if squadlessHeroes}}
                    {{#each squadlessHeroes}}
                        <option>{{name}}</option>
                    {{/each}}
                {{else}}
                    <option>No Heroes Available</option>
                {{/if}}

            </select>
        </div>
        {{#if squadlessHeroes}}
            <button class="btn btn-outline-secondary" type="submit">Save</button>
        {{/if}}
    </form>
</div>
{{/partial}}
{{> layout.hbs}}
