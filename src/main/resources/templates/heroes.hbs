{{#partial "navbar"}}
    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
    <li class="nav-item"><a class="nav-link" href="/heroes/new">Recruit a New Hero</a></li>
    <li class="nav-item"><a class="nav-link" href="/squads/new">Create a New Squad</a></li>
    <li class="nav-item active"><a class="nav-link" href="/heroes">All Heroes & Squads</a></li>
{{/partial}}


{{#partial "content"}}
        <div class="row">
            <div class="col-md-6 text-center">
                <h5 class="text-center"><u>Your heroes</u></h5>
                {{#if allHeroes}}
                    <div class="card" style="width: 20rem; margin: auto;">
                        <ul class="list-group list-group-flush">
                            {{#each allHeroes}}
                                <li class="list-group-item">{{name}} - <a href="/heroes/{{heroID}}">View Details</a></li>
                            {{/each}}
                        </ul>
                    </div>
                {{else}}
                    <p>No hero found.</p>
                {{/if}}
            </div>

            <div class="col-md-6 text-center">
                <h5><u>Squads</u></h5>
                {{#if allSquads}}
                    <div class="card" style="width: 20rem; margin: auto;">
                        <ul class="list-group list-group-flush">
                            {{#each allSquads}}
                                <li class="list-group-item">{{name}} - <a href="/heroes/{{SquadId}}">View Details</a></li>
                            {{/each}}
                        </ul>
                    </div>
                {{else}}
                    <p>No squads have been formed, check again in a while.</p>
                {{/if}}
            </div>
        </div>
{{/partial}}

{{> layout.hbs}}