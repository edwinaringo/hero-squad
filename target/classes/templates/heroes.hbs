<li class="nav-item active"><a class="nav-link" href="/heroes">View your progress</a></li>
{{/partial}}


{{#partial "content"}}
    <div class="row">
        <div class="col-md-6 text-center">
            <h5 class="text-center"><u>Heroes</u></h5>
            {{#if allHeroes}}
                <div class="card heroSquadCard">
                    <ul class="list-group list-group-flush">
                        {{#each allHeroes}}
                            <li class="list-group-item">{{name}} - <a href="/heroes/{{heroID}}">View Details</a></li>
                        {{/each}}
                    </ul>
                </div>
            {{else}}
                <p>No hero registered at the moment.</p>
            {{/if}}
        </div>

        <div class="col-md-6 text-center">
            <h5><u>Squads</u></h5>
            {{#if allSquads}}
                <div class="card heroSquadCard">
                    <ul class="list-group list-group-flush">
                        {{#each allSquads}}
                            <li class="list-group-item">{{name}} - <a href="/squads/{{squadId}}">View Details</a></li>
                        {{/each}}
                    </ul>
                </div>
            {{else}}
                <p>No squads have been formed.</p>
            {{/if}}
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}